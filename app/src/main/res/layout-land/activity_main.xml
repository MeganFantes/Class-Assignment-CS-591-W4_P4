<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1">

        <TextView
            android:id="@+id/txtChooseLetter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:padding="10dp"
            android:text="CHOOSE A LETTER"
            android:textSize="30sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/HLMain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal">

            <TextView
                android:id="@+id/TextView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onLClick"
                android:padding="10dp"
                android:text="A"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/TextView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onLClick"
                android:padding="10dp"
                android:text="B"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/TextView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onLClick"
                android:padding="10dp"
                android:text="C"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/TextView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onLClick"
                android:padding="10dp"
                android:text="D"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/TextView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onLClick"
                android:padding="10dp"
                android:text="E"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/TextView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onLClick"
                android:padding="10dp"
                android:text="F"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/TextView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onLClick"
                android:padding="10dp"
                android:text="G"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/TextView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onLClick"
                android:padding="10dp"
                android:text="H"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/TextView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onLClick"
                android:padding="10dp"
                android:text="I"
                android:textSize="20sp" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/NHLMain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal">

            <TextView
                android:id="@+id/TextView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onLClick"
                android:padding="10dp"
                android:text="J"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/TextView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onLClick"
                android:padding="10dp"
                android:text="K"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/TextView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onLClick"
                android:padding="10dp"
                android:text="L"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/TextView13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onLClick"
                android:padding="10dp"
                android:text="M"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/TextView14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onLClick"
                android:padding="10dp"
                android:text="N"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/TextView15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onLClick"
                android:padding="10dp"
                android:text="O"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/TextView16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onLClick"
                android:padding="10dp"
                android:text="P"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/TextView17"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onLClick"
                android:padding="10dp"
                android:text="Q"
                android:textSize="20sp" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/KHLMain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal">

            <TextView
                android:id="@+id/TextView18"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="onLClick"
                android:padding="10dp"
                android:text="R"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/TextView19"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="onLClick"
                android:padding="10dp"
                android:text="S"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/TextView20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="onLClick"
                android:padding="10dp"
                android:text="T"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/Textview21"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="onLClick"
                android:padding="10dp"
                android:text="U"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/TextView22"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onLClick"
                android:padding="10dp"
                android:text="V"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/TextView23"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onLClick"
                android:padding="10dp"
                android:text="W"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/TextView24"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onLClick"
                android:padding="10dp"
                android:text="X"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/TextView25"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onLClick"
                android:padding="10dp"
                android:text="Y"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/TextView26"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onLClick"
                android:padding="10dp"
                android:text="Z"
                android:textSize="20sp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtHintLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="HINT:"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/txtHint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text=""
                android:textSize="25sp" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            app:srcCompat="@drawable/hang0" />

        <TextView
            android:id="@+id/txtWord"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="40sp"
            android:text="_ _ _ _ _"
            android:layout_gravity="center_horizontal"/>

    </LinearLayout>
</LinearLayout>